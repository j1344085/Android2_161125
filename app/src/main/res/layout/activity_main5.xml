<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.ryun.calc.Main5Activity"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="피자(16000원)"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/textView4" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:singleLine="true"
            android:layout_weight="1"
            android:text="0" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_weight="0.00">

        <TextView
            android:text="스파게티(11000원)"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:id="@+id/textView13" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText4"
            android:text="0" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="샐러드(4000원)"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/textView14" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText5"
            android:text="0" />
    </LinearLayout>

    <CheckBox
        android:text="멤버쉽 카드있음(7% 할일)"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox3" />

    <RadioGroup
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="70dp"
        android:weightSum="1">

        <RadioButton
            android:text="피클 선택"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/radioButton4"
            android:layout_weight="0.51" />

        <RadioButton
            android:text="소스 선택"
            android:layout_width="wrap_content"
            android:id="@+id/radioButton5"
            android:layout_height="71dp"
            android:layout_weight="0.34" />
    </RadioGroup>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="353dp"
        android:layout_height="146dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="150dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView4"
            android:layout_weight="0.01" />

        <Button
            android:text="주문완료"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button12"
            android:layout_weight="0.20" />

    </LinearLayout>

    <TextView
        android:text="주문 개수 : "
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/textView15" />

    <TextView
        android:text="주문 금액: "
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/textView16" />

    <TextView
        android:text="피클이나 소스를 선택하여 주세요."
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/textView17" />

</LinearLayout>
